<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE9F0"
    tools:context=".Fragments.CurrentJobItemDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <!-- design bg           -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:elevation="0.01dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    android:src="@drawable/job_dtls_bg"
                    />

                <LinearLayout
                    android:elevation="0.05dp"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="355dp"
                    android:hardwareAccelerated="false"
                    android:layerType="software"
                    android:background="@drawable/dash_line_dtls"
                    />
                <View
                    android:elevation="0.05dp"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="665dp"
                    android:layerType="software"
                    android:background="@drawable/dash_line_dtls"
                    />
                <LinearLayout
                    android:elevation="0.05dp"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="770dp"
                    android:layerType="software"
                    android:background="@drawable/dash_line_dtls"
                    />

                <View
                    android:elevation="0.05dp"
                    android:layout_width="90dp"
                    android:rotation="90"
                    android:layout_height="2dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="720dp"
                    android:layerType="software"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/dash_line_dtls"
                    />


            </FrameLayout>

            <!-- data top           -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/circle_colored_bulet"
                        />

                    <TextView
                        android:id="@+id/job_dtls_time_ago_tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1d Ago"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <ScrollView
                        android:fillViewport="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/job_dtls_title_tv_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inria_regular"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Cleaning garden slkfj sfjsl skfjs lskfjjs sfjsjsfls"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="25sp" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_gravity="center"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/circle_colored_bulet"
                        />

                    <TextView
                        android:id="@+id/job_dtls_addr_tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mirpur shonir akhra dhaka" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.6"
                            android:src="@drawable/shadow_bg_colored"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/icon_payment"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                />

                            <TextView

                                android:id="@+id/job_dtls_top_payment_tv_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/inria_regular"
                                android:text="500 BDT" />
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.6"
                            android:src="@drawable/shadow_bg_colored"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/icon_job_type_remot_onsite"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                />

                            <TextView

                                android:id="@+id/job_dtls_loc_tv_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/inria_regular"
                                android:text="On Site" />
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.6"
                            android:src="@drawable/shadow_bg_colored"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/icon_job_duration"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                />

                            <TextView

                                android:id="@+id/job_dtls_top_type_tv_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/inria_regular"
                                android:text="10AM-3PM" />
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inria_regular"
                            android:text="Job Description"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginBottom="4dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shadow_bg_colored"
                            app:layout_constraintBottom_toBottomOf="@+id/textView11"
                            app:layout_constraintStart_toEndOf="@+id/textView11" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="3dp"

                            android:background="@drawable/shadow_bg_colored"
                            app:layout_constraintEnd_toEndOf="@+id/view3"
                            app:layout_constraintTop_toBottomOf="@+id/textView11" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="210dp">
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="true"

                            >

                            <TextView
                                android:id="@+id/job_dtls_top_desc_tv_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inria_regular"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:text="This forces software rendering for that view, which might help identify if hardware acceleration is causing the issue. Remember to reenable hardware acceleration afterward.
If none of these suggestions work, consider sharing the following information for further troubleshooting:
Full Layout XML: Share the complete layout XML where youre using the dash_line_dtls drawable. This might reveal any layout-related issues affecting the view.
Android Version: Knowing the Android version youre targeting can help identify any known bugs related to stroke rendering.
By providing this additional context, we can narrow down the possibilities and hopefully get your dashed lines rendering correctly in your app."
                                android:textSize="15sp" />
                        </ScrollView>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="90dp"
                    android:weightSum="2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inria_regular"
                                android:text="Job Payment"
                                android:textSize="18sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginBottom="4dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/shadow_bg_colored"
                                app:layout_constraintBottom_toBottomOf="@+id/textView14"
                                app:layout_constraintStart_toEndOf="@+id/textView14" />

                            <View
                                android:layout_width="50dp"
                                android:layout_height="2dp"
                                android:background="@drawable/shadow_bg_colored"
                                app:layout_constraintStart_toStartOf="@+id/textView14"
                                app:layout_constraintTop_toBottomOf="@+id/textView14" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:src="@drawable/icon_payment"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                />

                            <TextView

                                android:id="@+id/job_dtls_bottom_payment_tv_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/inria_regular"
                                android:text="500 BDT"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/inria_regular"
                                android:text="Job Payment"
                                android:textSize="18sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <View
                                android:id="@+id/view2"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginBottom="4dp"
                                android:background="@drawable/shadow_bg_colored"
                                app:layout_constraintBottom_toBottomOf="@+id/textView18"
                                app:layout_constraintStart_toEndOf="@+id/textView18" />

                            <View
                                android:layout_width="50dp"
                                android:layout_height="2dp"
                                android:background="@drawable/shadow_bg_colored"
                                app:layout_constraintEnd_toEndOf="@+id/view2"
                                app:layout_constraintTop_toBottomOf="@+id/textView18" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/icon_job_duration" />

                            <TextView

                                android:id="@+id/job_dtls_duration_tv_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/inria_regular"
                                android:text="10AM-3PM"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inria_regular"
                            android:text="Job Location"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginBottom="4dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shadow_bg_colored"
                            app:layout_constraintBottom_toBottomOf="@+id/textView19"
                            app:layout_constraintStart_toEndOf="@+id/textView19" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="3dp"

                            android:background="@drawable/shadow_bg_colored"
                            app:layout_constraintEnd_toEndOf="@+id/view4"
                            app:layout_constraintTop_toBottomOf="@+id/textView19" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:background="#F4F1FA"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="20dp">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/job_dtls_google_map_cl_id"
                                android:clickable="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/spinner_box_stroke"
                                android:layout_weight="2"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                >


                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="55dp"
                                    android:layout_height="45dp"
                                    android:alpha="0.8"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/icon_location"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <!--                                        android:src="@drawable/icon_map_point_colored"-->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inria_regular"
                                    android:lineSpacingMultiplier="0.8"
                                    android:text="See Job Location on Google Map"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp"
                                    android:textSize="13sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                            </androidx.constraintlayout.widget.ConstraintLayout>



                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:alpha="0.6"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/icon_map_point_colored"
                                />
                            <LinearLayout
                                android:layout_width="130dp"
                                android:gravity="start|center_vertical"
                                android:layout_height="match_parent">
                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:nestedScrollingEnabled="true">

                                    <TextView
                                        android:id="@+id/job_dtls_bottom_addr_tv_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:text="This forces software renare rendering for that view, whi" />
                                </ScrollView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:clickable="true"
                        android:layout_width="200dp"
                        android:id="@+id/job_dtls_apply_btn_ll_id"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:background="@drawable/apply_btn_bg">
                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="Apply"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </ScrollView>


</LinearLayout>